    <script>
       
        let cart = [];
        let currentRestaurantId = null;
        let currentRestaurantName = null;

        // Sayfa yüklendiğinde başla
        document.addEventListener('DOMContentLoaded', function () {
            try {
                loadCartFromStorage();
                updateCartDisplay();
                attachAllCartButtons();

                const checkoutBtn = document.querySelector('#checkoutBtn');
                if (checkoutBtn) {
                    checkoutBtn.addEventListener('click', proceedToCheckout);
                }

             
                setTimeout(function () {
                    const preloader = document.querySelector('.preloader-wrapper');
                    if (preloader) {
                        preloader.style.display = 'none';
                    }
                }, 1000);

                console.log('Cart system initialized successfully');
            } catch (error) {
                console.error('Cart initialization error:', error);
                // Preloader'ı yine de kapat
                const preloader = document.querySelector('.preloader-wrapper');
                if (preloader) {
                    preloader.style.display = 'none';
                }
            }
        });

        //  Sepete ekle butonlarını aktif et
        function attachAllCartButtons() {
            try {
                document.querySelectorAll('a, button').forEach(button => {
                    const buttonText = button.textContent || '';
                    if (buttonText.includes('Sepete Ekle') && !button.hasAttribute('data-cart-ready')) {
                        button.setAttribute('data-cart-ready', 'true');
                        button.addEventListener('click', handleAddToCart);
                    }
                });

                attachQuantityButtons();
            } catch (error) {
                console.error('Button attachment error:', error);
            }
        }

        //  Sepete ekle işlemi
        function handleAddToCart(e) {
            try {
                e.preventDefault();

                const productCard = this.closest('.product-item, .universal-product, .col, .card');
                if (!productCard) {
                    console.error('Ürün kartı bulunamadı');
                    return;
                }

           
                const productId = getProductId(productCard);
                const productName = getProductName(productCard);
                const productPrice = getProductPrice(productCard);
                const productImage = getProductImage(productCard);
                const productCategory = getProductCategory(productCard);
                const restaurantId = getRestaurantId(productCard);
                const restaurantName = getRestaurantName(productCard);
                const quantity = getQuantity(productCard);

              
                if (!productId || productId <= 0) {
                    alert('Ürün bilgileri eksik. Lütfen sayfa yöneticisine başvurun.');
                    console.error('Geçersiz ürün ID:', productId, 'Ürün:', productName);
                    return;
                }

                console.log('Sepete eklenen ürün - ID:', productId, 'Ürün:', productName);

                if (canAddToCart(restaurantId, restaurantName)) {
                    addToCart({
                        id: productId, 
                        name: productName,
                        price: productPrice,
                        image: productImage,
                        category: productCategory,
                        quantity: quantity,
                        restaurantId: restaurantId,
                        restaurantName: restaurantName
                    });

                   
                    const quantityInput = productCard.querySelector('input[type="text"], input[type="number"], .quantity-input');
                    if (quantityInput && quantityInput.type !== 'hidden') {
                        quantityInput.value = 1;
                    }

                    showSuccessMessage(productName);
                } else {
                    showRestaurantWarning(restaurantName, {
                        id: productId,
                        name: productName,
                        price: productPrice,
                        image: productImage,
                        category: productCategory,
                        quantity: quantity,
                        restaurantId: restaurantId,
                        restaurantName: restaurantName
                    });
                }
            } catch (error) {
                console.error('Add to cart error:', error);
            }
        }

        //  GERÇEK ÜRÜN ID'SİNİ ALMA
        function getProductId(card) {
            try {
               
                let productId = card.getAttribute('data-product-id');
                if (productId && productId !== 'null') {
                    const id = parseInt(productId);
                    if (id > 0) return id;
                }

               
                productId = card.getAttribute('data-id');
                if (productId && productId !== 'null') {
                    const id = parseInt(productId);
                    if (id > 0) return id;
                }

               
                const hiddenInput = card.querySelector('input[name="ProductID"], input[name="productId"], input[name="id"]');
                if (hiddenInput && hiddenInput.value) {
                    const id = parseInt(hiddenInput.value);
                    if (id > 0) return id;
                }

               
                const detailLink = card.querySelector('a[href*="/Product/Details/"], a[href*="/Details/"]');
                if (detailLink) {
                    const match = detailLink.href.match(/\/Details\/(\d+)/);
                    if (match) {
                        const id = parseInt(match[1]);
                        if (id > 0) return id;
                    }
                }

               
                const addButton = card.querySelector('[onclick*="addToCart"], [onclick*="AddToCart"]');
                if (addButton) {
                    const onclickText = addButton.getAttribute('onclick');
                    const match = onclickText.match(/\b(\d+)\b/);
                    if (match) {
                        const id = parseInt(match[1]);
                        if (id > 0) return id;
                    }
                }

                console.error('Ürün ID bulunamadı! Ürün kartına data-product-id attribute ekleyin:', card);
                return null;
            } catch (error) {
                console.error('Get product ID error:', error);
                return null;
            }
        }

        function getProductName(card) {
            try {
                const nameElement = card.querySelector('h3, h5, h6, .card-title, .product-name, .product-title');
                return nameElement ? nameElement.textContent.trim() : 'Ürün';
            } catch (error) {
                return 'Ürün';
            }
        }

        function getProductPrice(card) {
            try {
                const priceElement = card.querySelector('.price, .product-price, .fw-bold, .text-warning');
                if (!priceElement) return 0;

                const priceText = priceElement.textContent;
                const match = priceText.match(/[\d,]+\.?\d*/);
                return match ? parseFloat(match[0].replace(',', '.')) : 0;
            } catch (error) {
                return 0;
            }
        }

        function getProductImage(card) {
            try {
                const img = card.querySelector('img');
                return img && img.src ? img.src : '/wwwroot/images/default-product.jpg';
            } catch (error) {
                return '/wwwroot/images/default-product.jpg';
            }
        }

        function getProductCategory(card) {
            try {
                const categoryElement = card.querySelector('.badge, .category, .text-muted small');
                return categoryElement ? categoryElement.textContent.trim() : 'Genel';
            } catch (error) {
                return 'Genel';
            }
        }

        function getRestaurantId(card) {
            try {
                const restaurantId = card.getAttribute('data-restaurant-id');
                return restaurantId ? parseInt(restaurantId) : 1;
            } catch (error) {
                return 1;
            }
        }

        function getRestaurantName(card) {
            try {
                return card.getAttribute('data-restaurant-name') || 'Varsayılan Restoran';
            } catch (error) {
                return 'Varsayılan Restoran';
            }
        }

        function getQuantity(card) {
            try {
                const input = card.querySelector('input[type="text"]:not([type="hidden"]), input[type="number"], .quantity-input');
                if (input && input.value && input.type !== 'hidden') {
                    const qty = parseInt(input.value);
                    return qty > 0 ? qty : 1;
                }
                return 1;
            } catch (error) {
                return 1;
            }
        }

        // Miktar butonları
        function attachQuantityButtons() {
            try {
                
                document.querySelectorAll('.quantity-right-plus, .btn-success, [class*="plus"], [onclick*="plus"]').forEach(btn => {
                    if (!btn.hasAttribute('data-qty-ready')) {
                        btn.setAttribute('data-qty-ready', 'true');
                        btn.addEventListener('click', function (e) {
                            e.preventDefault();
                            e.stopPropagation();
                            const input = findQuantityInput(this);
                            if (input) {
                                input.value = parseInt(input.value || 1) + 1;
                            }
                        });
                    }
                });

               
                document.querySelectorAll('.quantity-left-minus, .btn-danger, [class*="minus"], [onclick*="minus"]').forEach(btn => {
                    if (!btn.hasAttribute('data-qty-ready')) {
                        btn.setAttribute('data-qty-ready', 'true');
                        btn.addEventListener('click', function (e) {
                            e.preventDefault();
                            e.stopPropagation();
                            const input = findQuantityInput(this);
                            if (input && parseInt(input.value) > 1) {
                                input.value = parseInt(input.value) - 1;
                            }
                        });
                    }
                });
            } catch (error) {
                console.error('Quantity buttons error:', error);
            }
        }

        function findQuantityInput(button) {
            try {
               
                let input = button.parentNode.querySelector('input[type="text"]:not([type="hidden"]), input[type="number"]');
                if (input && input.type !== 'hidden') return input;

               
                input = button.previousElementSibling;
                if (input && input.tagName === 'INPUT' && input.type !== 'hidden') return input;

                input = button.nextElementSibling;
                if (input && input.tagName === 'INPUT' && input.type !== 'hidden') return input;

                return null;
            } catch (error) {
                return null;
            }
        }

        // Restoran kontrolü
        function canAddToCart(restaurantId, restaurantName) {
            if (cart.length === 0) {
                currentRestaurantId = restaurantId;
                currentRestaurantName = restaurantName;
                return true;
            }
            return currentRestaurantId === restaurantId;
        }

        // Restoran uyarısı
        function showRestaurantWarning(newRestaurantName, product) {
            const result = confirm(
                `Sepetinizde "${currentRestaurantName}" restoranından ürünler var.\n\n` +
                `"${newRestaurantName}" restoranından ürün eklemek için sepeti temizlemek gerekiyor.\n\n` +
                `Sepeti temizleyip "${product.name}" ürünü eklemek istiyor musunuz?`
            );

            if (result) {
                clearCart();
                currentRestaurantId = product.restaurantId;
                currentRestaurantName = product.restaurantName;
                addToCart(product);
                showSuccessMessage(product.name);
            }
        }

        // SEPETE EKLEME FONKSİYONU
        function addToCart(product) {
            try {
               
                if (!product.id || product.id <= 0) {
                    console.error('Geçersiz ürün ID:', product);
                    alert('Ürün bilgilerinde hata var.');
                    return;
                }

                const existing = cart.find(item => item.id === product.id);

                if (existing) {
                    existing.quantity += (product.quantity || 1);
                } else {
                    cart.push({
                        id: product.id,
                        name: product.name,
                        price: product.price,
                        image: product.image,
                        category: product.category,
                        restaurantId: product.restaurantId,
                        restaurantName: product.restaurantName,
                        quantity: product.quantity || 1
                    });
                }

                updateCartDisplay();
                saveCartToStorage();
                console.log('Ürün sepete eklendi:', product.name, 'ID:', product.id);
            } catch (error) {
                console.error('Add to cart error:', error);
            }
        }

        //  Sepeti temizle
        function clearCart() {
            cart = [];
            currentRestaurantId = null;
            currentRestaurantName = null;
            updateCartDisplay();
            saveCartToStorage();
        }

        //  Sepetten ürün kaldır
        function removeFromCart(productId) {
            try {
                cart = cart.filter(item => item.id !== productId);
                if (cart.length === 0) {
                    currentRestaurantId = null;
                    currentRestaurantName = null;
                }
                updateCartDisplay();
                saveCartToStorage();
            } catch (error) {
                console.error('Remove from cart error:', error);
            }
        }

        // Sepet görünümünü güncelle
        function updateCartDisplay() {
            try {
                const cartCount = document.querySelectorAll('.cart-count');
                const cartTotal = document.querySelector('.cart-total');
                const cartList = document.querySelector('#offcanvasCart .list-group');

                const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
                const totalPrice = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);

               
                cartCount.forEach(el => {
                    el.textContent = totalItems;
                    el.style.display = totalItems > 0 ? 'inline' : 'none';
                });

                
                if (cartTotal) {
                    cartTotal.textContent = totalPrice.toFixed(2) + ' TL';
                }

               
                if (cartList) {
                    if (cart.length === 0) {
                        cartList.innerHTML = '<li class="list-group-item text-center">Sepetiniz boş</li>';
                    } else {
                        let html = '';

                       
                        if (currentRestaurantName) {
                            html += `
                                <li class="list-group-item bg-light">
                                    <strong>📍 ${currentRestaurantName}</strong>
                                    <small class="float-end">${totalItems} ürün</small>
                                </li>
                            `;
                        }

                       
                        cart.forEach(item => {
                            html += `
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <img src="${item.image}" style="width: 40px; height: 40px; object-fit: cover; margin-right: 10px;" onerror="this.src='/wwwroot/images/default-product.jpg'">
                                        <div>
                                            <h6 class="mb-0">${item.name}</h6>
                                            <small>ID: ${item.id} | ${item.quantity} adet × ${item.price.toFixed(2)} TL</small>
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <div class="fw-bold">${(item.price * item.quantity).toFixed(2)} TL</div>
                                        <button class="btn btn-sm btn-outline-danger" onclick="removeFromCart(${item.id})">×</button>
                                    </div>
                                </li>
                            `;
                        });

                       
                        html += `
                            <li class="list-group-item bg-light">
                                <div class="d-flex justify-content-between">
                                    <strong>Toplam:</strong>
                                    <strong>${totalPrice.toFixed(2)} TL</strong>
                                </div>
                            </li>
                        `;

                        cartList.innerHTML = html;
                    }

                   
                    const checkoutBtn = document.querySelector('#checkoutBtn');
                    if (checkoutBtn) {
                        checkoutBtn.style.display = cart.length > 0 ? 'block' : 'none';
                    }
                }
            } catch (error) {
                console.error('Update cart display error:', error);
            }
        }

        //  LocalStorage işlemleri
        function loadCartFromStorage() {
            try {
                const savedCart = localStorage.getItem('cart');
                const savedRestaurantId = localStorage.getItem('currentRestaurantId');
                const savedRestaurantName = localStorage.getItem('currentRestaurantName');

                if (savedCart && savedCart !== 'null') {
                    cart = JSON.parse(savedCart);
                }
                if (savedRestaurantId && savedRestaurantId !== 'null') {
                    currentRestaurantId = parseInt(savedRestaurantId);
                }
                if (savedRestaurantName && savedRestaurantName !== 'null') {
                    currentRestaurantName = savedRestaurantName;
                }
            } catch (error) {
                console.error('LocalStorage load error:', error);
                cart = [];
                currentRestaurantId = null;
                currentRestaurantName = null;
            }
        }

        function saveCartToStorage() {
            try {
                localStorage.setItem('cart', JSON.stringify(cart));
                localStorage.setItem('currentRestaurantId', currentRestaurantId || '');
                localStorage.setItem('currentRestaurantName', currentRestaurantName || '');
            } catch (error) {
                console.error('LocalStorage save error:', error);
            }
        }

        // Başarı mesajı
        function showSuccessMessage(productName) {
            alert(`✅ ${productName} sepete eklendi!`);
        }

        // Ödemeye geç fonksiyonu
        function proceedToCheckout() {
            try {
                if (cart.length === 0) {
                    alert('Sepetiniz boş!');
                    return;
                }

                console.log('Checkout\'a giden sepet:', cart);

              
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/Cart/Index';

               
                const cartInput = document.createElement('input');
                cartInput.type = 'hidden';
                cartInput.name = 'cartData';
                cartInput.value = JSON.stringify(cart);
                form.appendChild(cartInput);

             
                const restaurantInput = document.createElement('input');
                restaurantInput.type = 'hidden';
                restaurantInput.name = 'restaurantName';
                restaurantInput.value = currentRestaurantName || '';
                form.appendChild(restaurantInput);

               
                document.body.appendChild(form);
                form.submit();
            } catch (error) {
                console.error('Proceed to checkout error:', error);
                alert('Checkout sırasında hata oluştu.');
            }
        }

        // Sayfa değiştiğinde yeniden başlat
        function reinitializeCart() {
            try {
                attachAllCartButtons();
            } catch (error) {
                console.error('Reinitialize cart error:', error);
            }
        }

        //  Global erişim için window'a ekle
        window.proceedToCheckout = proceedToCheckout;
        window.reinitializeCart = reinitializeCart;
        window.removeFromCart = removeFromCart;
        window.cart = cart;
    </script>
