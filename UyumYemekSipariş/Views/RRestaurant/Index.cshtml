

@model UyumYemekSipariş.Models.Restaurant
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_RestaurantOwnerLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-sm-flex align-items-center mb-4">
                    <h4 class="card-title mb-sm-0">Restoran Bilgileri</h4>
                    <a href="/RRestaurant/Edit" class="btn btn-primary ms-auto mb-3 mb-sm-0">Düzenle</a>
                </div>

                @if (Model != null && Model.RestaurantID > 0)
                {
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="font-weight-bold">Restoran Adı:</label>
                                <p>@Model.Name</p>
                            </div>

                            <div class="form-group">
                                <label class="font-weight-bold">Açıklama:</label>
                                <p>@Model.Description</p>
                            </div>

                            <div class="form-group">
                                <label class="font-weight-bold">Adres:</label>
                                <p>@Model.Address</p>
                            </div>

                            <div class="form-group">
                                <label class="font-weight-bold">Telefon:</label>
                                <p>@Model.PhoneNumber</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="font-weight-bold">Minimum Sipariş Tutarı:</label>
                                <p>@Model.MinOrderAmount ₺</p>
                            </div>

                            <div class="form-group">
                                <label class="font-weight-bold">Teslimat Ücreti:</label>
                                <p>@Model.DeliveryFee ₺</p>
                            </div>

                            <div class="form-group">
                                <label class="font-weight-bold">Durum:</label>
                                <p>
                                    @if (Model.IsActive == true)
                                    {
                                        <span class="badge badge-success p-2">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger p-2">Pasif</span>
                                    }
                                </p>
                            </div>

                            <div class="form-group">
                                <label class="font-weight-bold">Onay Durumu:</label>
                                <p>
                                    @if (Model.IsApproved == true)
                                    {
                                        <span class="badge badge-success p-2">Onaylı</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning p-2">Onay Bekliyor</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-12">
                            <button class="btn btn-warning me-2" onclick="durumDegistir(@Model.IsActive.ToString().ToLower())">
                                @if (Model.IsActive == true)
                                {
                                    <span>Pasif Yap</span>
                                }
                                else
                                {
                                    <span>Aktif Yap</span>
                                }
                            </button>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <p>Henüz restoran bilgilerinizi eklemediniz.</p>
                        <a href="/RRestaurant/Edit" class="btn btn-primary">Restoran Bilgilerini Ekle</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="durumModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Restoran Durumu Değiştir</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="currentStatus" />
                <p id="durumText">Restoran durumunu değiştirmek istediğinizden emin misiniz?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-warning" id="confirmDurum">Değiştir</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {

        window.durumDegistir = function (isActive) {
            $('#currentStatus').val(isActive);

            if (isActive) {
                $('#durumText').text('Restoranı pasif yapmak istediğinizden emin misiniz?');
            } else {
                $('#durumText').text('Restoranı aktif yapmak istediğinizden emin misiniz?');
            }

            $('#durumModal').modal('show');
        }

        $('#confirmDurum').click(function () {
            var currentStatus = $('#currentStatus').val() === 'true';
            var newStatus = !currentStatus;

            $.ajax({
                url: '/RRestaurant/ToggleStatus',
                type: 'POST',
                data: {
                    isActive: newStatus
                },
                success: function (result) {
                    $('#durumModal').modal('hide');
                    if (result.sonuc == 0) {
                        location.reload();
                    }
                },
                error: function () {
                    $('#durumModal').modal('hide');
                }
            });
        });
    });
</script>