@model List<UyumYemekSipariş.Models.User>

@{
    ViewBag.Title = "Kullanıcıları Yönet";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-sm-flex align-items-center mb-4">
                    <h4 class="card-title mb-sm-0">Tüm Kullanıcılar</h4>
                    <a href="/Admin/Index" class="text-dark ms-auto mb-3 mb-sm-0">Dashboard'a Dön</a>
                </div>
                <div class="table-responsive border rounded p-1">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="font-weight-bold">Kullanıcı</th>
                                <th class="font-weight-bold">E-posta</th>
                                <th class="font-weight-bold">Telefon</th>
                                <th class="font-weight-bold">Kullanıcı Tipi</th>
                                <th class="font-weight-bold">Kayıt Tarihi</th>
                                <th class="font-weight-bold">Durum</th>
                                <th class="font-weight-bold">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div>
                                            <strong>@item.FirstName @item.LastName</strong>
                                            <br><small class="text-muted">ID: @item.UserID</small>
                                        </div>
                                    </td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>
                                        @if (item.UserType == "Admin")
                                        {
                                            <span class="badge badge-danger">Admin</span>
                                        }
                                        else if (item.UserType == "RestaurantOwner")
                                        {
                                            <span class="badge badge-primary">Restoran Sahibi</span>
                                        }
                                        else if (item.UserType == "Customer")
                                        {
                                            <span class="badge badge-info">Müşteri</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">@item.UserType</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.CreatedDate.HasValue)
                                        {
                                            @item.CreatedDate.Value.ToString("dd.MM.yyyy HH:mm")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            <div class="badge badge-success p-2">Aktif</div>
                                        }
                                        else
                                        {
                                            <div class="badge badge-danger p-2">Pasif</div>
                                        }
                                    </td>
                                    <td>
                                        @if (item.UserType != "Admin")
                                        {
                                            <button class="btn btn-sm btn-warning me-1" onclick="toggleUserStatus(@item.UserID, @item.IsActive.ToString().ToLower())" title="Durum Değiştir">
                                                @if (item.IsActive == true)
                                                {
                                                    <span>Pasif Yap</span>
                                                }
                                                else
                                                {
                                                    <span>Aktif Yap</span>
                                                }
                                            </button>
                                            <button class="btn btn-sm btn-danger" onclick="deleteUser(@item.UserID)" title="Kullanıcıyı Sil">
                                                Sil
                                            </button>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Admin</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="d-flex mt-4 flex-wrap align-items-center">
                    <p class="text-muted mb-sm-0">Toplam @Model.Count kullanıcı gösteriliyor</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {

        window.toggleUserStatus = function (userId, currentStatus) {
            var newStatus = !currentStatus;
            var message = newStatus ? 'Kullanıcıyı aktif yapmak istediğinizden emin misiniz?' : 'Kullanıcıyı pasif yapmak istediğinizden emin misiniz?';

            if (confirm(message)) {
                $.ajax({
                    url: '/Admin/ToggleUserStatus',
                    type: 'POST',
                    data: {
                        userId: userId,
                        isActive: newStatus
                    },
                    success: function (result) {
                        if (result.sonuc == 0) {
                            location.reload();
                        } else {
                            alert('İşlem başarısız!');
                        }
                    },
                    error: function () {
                        alert('Bir hata oluştu!');
                    }
                });
            }
        }

        window.deleteUser = function (userId) {
            if (confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!')) {
                $.ajax({
                    url: '/Admin/DeleteUser',
                    type: 'POST',
                    data: { id: userId },
                    success: function (result) {
                        if (result.sonuc == 0) {
                            alert(result.mesaj);
                            location.reload();
                        } else {
                            alert(result.mesaj);
                        }
                    },
                    error: function () {
                        alert('Bir hata oluştu!');
                    }
                    }
                });
            }
        }
    });
</script>