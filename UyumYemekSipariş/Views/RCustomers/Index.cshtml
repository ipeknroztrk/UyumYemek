@model List<UyumYemekSipariş.Models.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_RestaurantOwnerLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-sm-flex align-items-center mb-4">
                    <h4 class="card-title mb-sm-0">Müşteriler</h4>
                    <a href="#" class="text-dark ms-auto mb-3 mb-sm-0"> Tüm Müşterileri Görüntüle</a>
                </div>
                <div class="table-responsive border rounded p-1">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="font-weight-bold">Müşteri</th>
                                <th class="font-weight-bold">Email</th>
                                <th class="font-weight-bold">Telefon</th>
                             
                                <th class="font-weight-bold">Sipariş Sayısı</th>
                                <th class="font-weight-bold">Durum</th>
                                <th class="font-weight-bold">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                       
                                        @(item.FirstName + " " + item.LastName)
                                    </td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                   
                                    <td>
                                        @{
                                            var siparisCount = ViewBag.SiparisCount ?? 0;
                                        }
                                        <span class="badge badge-info p-2">@siparisCount Sipariş</span>
                                    </td>
                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            <div class="badge badge-success p-2">Aktif</div>
                                        }
                                        else
                                        {
                                            <div class="badge badge-danger p-2">Engelli</div>
                                        }
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-warning me-2" onclick="engelleModal(@item.UserID, @item.IsActive.ToString().ToLower())" title="Durum Değiştir">
                                            @if (item.IsActive == true)
                                            {
                                                <span>Engelle</span>
                                            }
                                            else
                                            {
                                                <span>Aktifleştir</span>
                                            }
                                        </button>
                                        <button class="btn btn-sm btn-danger" onclick="silMusteri(@item.UserID)" title="Sil">
                                            Sil
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="d-flex mt-4 flex-wrap align-items-center">
                    <p class="text-muted mb-sm-0">Toplam @Model.Count müşteri gösteriliyor</p>
                    <nav class="ms-auto">
                        <ul class="pagination separated pagination-info mb-sm-0">
                            <li class="page-item"><a href="#" class="page-link"><i class="icon-arrow-left"></i></a></li>
                            <li class="page-item active"><a href="#" class="page-link">1</a></li>
                            <li class="page-item"><a href="#" class="page-link">2</a></li>
                            <li class="page-item"><a href="#" class="page-link">3</a></li>
                            <li class="page-item"><a href="#" class="page-link">4</a></li>
                            <li class="page-item"><a href="#" class="page-link"><i class="icon-arrow-right"></i></a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="engelleModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Müşteri Durumu Değiştir</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="updateUserId" />
                <input type="hidden" id="currentStatus" />
                <p id="engelleText">Bu müşteriyi engellemek istediğinizden emin misiniz?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-warning" id="confirmEngelle">Değiştir</button>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        let silId = 0;

        window.engelleModal = function (userId, isActive) {
            $('#updateUserId').val(userId);
            $('#currentStatus').val(isActive);

            if (isActive) {
                $('#engelleText').text('Bu müşteriyi engellemek istediğinizden emin misiniz?');
            } else {
                $('#engelleText').text('Bu müşteriyi aktifleştirmek istediğinizden emin misiniz?');
            }

            $('#engelleModal').modal('show');
        }

        $('#confirmEngelle').click(function () {
            var userId = $('#updateUserId').val();
            var currentStatus = $('#currentStatus').val() === 'true';
            var newStatus = !currentStatus;

            $.ajax({
                url: '/RCustomers/Engelle',
                type: 'POST',
                data: {
                    userId: userId,
                    isActive: newStatus
                },
                success: function (result) {
                    $('#engelleModal').modal('hide');
                    if (result.sonuc == 0) {
                        location.reload();
                    }
                },
                error: function () {
                    $('#engelleModal').modal('hide');
                }
            });
        });

    });
</script>