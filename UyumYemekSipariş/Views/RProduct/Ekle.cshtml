
@model UyumYemekSipariş.Models.Product
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/_RestaurantOwnerLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@(Model?.ProductID == 0 ? "Ürün Ekle" : "Ürün Güncelle")</h4>
            <p class="card-description">Ürün bilgilerini giriniz</p>

            <form action="/RProduct/Ekle" method="post" class="forms-sample">
                <input type="hidden" name="ProductID" value="@(Model?.ProductID ?? 0)" />

                <div class="form-group">
                    <label for="Name">Ürün Adı</label>
                    <input type="text" name="Name" value="@(Model?.Name ?? "")" class="form-control" placeholder="Ürün adını giriniz" required />
                </div>

                <div class="form-group">
                    <label for="Description">Açıklama</label>
                    <textarea name="Description" class="form-control" rows="4" placeholder="Ürün açıklamasını giriniz">@(Model?.Description ?? "")</textarea>
                </div>

                <div class="form-group">
                    <label for="Price">Fiyat</label>
                    <input type="number" name="Price" value="@(Model?.Price ?? 0)" class="form-control" placeholder="Fiyat giriniz" step="0.01" required />
                </div>

                <div class="form-group">
                    <label for="CategoryID">Kategori</label>
                    <select name="CategoryID" class="form-control" required>
                        <option value="">Kategori Seçiniz</option>
                        @foreach (var cat in ViewBag.Categories)
                        {
                            <option value="@cat.CategoryID" @(Model?.CategoryID == cat.CategoryID ? "selected" : "")>@cat.Name</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label for="ImageUrl">Resim URL</label>
                    <input type="text" name="ImageUrl" value="@(Model?.ImagePath ?? "")" class="form-control" placeholder="Resim URL'sini giriniz" />
                </div>

                <div class="form-group">
                    <div class="form-check">
                        <input type="checkbox" name="IsAvailable" value="true" @(Model?.IsAvailable == true ? "checked" : "") class="form-check-input" id="IsAvailable" />
                        <input type="hidden" name="IsAvailable" value="false" />
                        <label class="form-check-label" for="IsAvailable">
                            Aktif
                        </label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
                <a href="/RProduct/Index" class="btn btn-light">İptal</a>
            </form>
        </div>
    </div>
</div>