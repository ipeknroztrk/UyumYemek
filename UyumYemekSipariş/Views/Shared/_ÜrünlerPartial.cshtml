@model List<UyumYemekSipariş.Models.Product>
@{
    var kategoriler = ViewBag.Kategoriler as List<UyumYemekSipariş.Models.Category>;
}

<section class="py-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="bootstrap-tabs product-tabs">
                    <div class="tabs-header d-flex justify-content-between border-bottom my-5">
                        <h3>Ürünlerimiz</h3>
                        <nav>
                            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                <a href="#" class="nav-link text-uppercase fs-6 active" id="nav-all-tab" data-bs-toggle="tab" data-bs-target="#nav-all">Tüm Kategoriler</a>
                            </div>
                        </nav>
                    </div>

                    <div class="tab-content" id="nav-tabContent">
                        <div class="tab-pane fade show active" id="nav-all" role="tabpanel" aria-labelledby="nav-all-tab">
                            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-4">
                                @foreach (var item in Model)
                                {
                                    <div class="col">
                                       
                                        <div class="product-item card h-100 shadow-sm border-0"
                                             data-product-id="@item.ProductID"
                                             data-restaurant-id="@(item.RestaurantID ?? 1)"
                                             data-restaurant-name="@(item.Restaurant?.Name ?? "Varsayılan Restoran")">

                                            <div class="position-relative">
                                                <a href="#" class="btn-wishlist position-absolute top-0 end-0 m-2">
                                                    <svg width="24" height="24"><use xlink:href="#heart"></use></svg>
                                                </a>
                                                <figure class="mb-0">
                                                    <a href="#" title="@item.Name">
                                                        <img src="@item.ImagePath" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@item.Name">
                                                    </a>
                                                </figure>

                                                @if (item.Category != null)
                                                {
                                                    <div class="position-absolute top-0 start-0 m-2">
                                                        <span class="badge bg-dark bg-opacity-75 category">
                                                            @item.Category.Name
                                                        </span>
                                                    </div>
                                                }

                                                @if (item.Restaurant != null)
                                                {
                                                    <div class="position-absolute bottom-0 start-0 m-2">
                                                        <span class="badge bg-warning restaurant-name" data-restaurant-id="@item.RestaurantID">
                                                            📍 @item.Restaurant.Name
                                                        </span>
                                                    </div>
                                                }
                                            </div>

                                            <div class="card-body d-flex flex-column">
                                               
                                                <h5 class="card-title product-name">@item.Name</h5>
                                                <p class="card-text text-muted small flex-grow-1">@item.Description</p>

                                                <div class="d-flex justify-content-between align-items-center mb-3">
                                                    <div class="rating d-flex align-items-center">
                                                        <svg width="16" height="16" class="text-warning me-1"><use xlink:href="#star-solid"></use></svg>
                                                        <span>4.5</span>
                                                    </div>
                                                 
                                                    <span class="price product-price h5 mb-0 text-warning fw-bold">@item.Price TL</span>
                                                </div>

                                                <div class="d-flex align-items-center justify-content-between mb-3">
                                                 
                                                    <div class="input-group product-qty" style="width: 120px;">
                                                        <button class="btn btn-outline-secondary btn-sm quantity-left-minus" type="button">
                                                            <svg width="16" height="16"><use xlink:href="#minus"></use></svg>
                                                        </button>
                                                        <input type="number" class="form-control form-control-sm text-center quantity-input" value="1" min="1">
                                                        <button class="btn btn-outline-secondary btn-sm quantity-right-plus" type="button">
                                                            <svg width="16" height="16"><use xlink:href="#plus"></use></svg>
                                                        </button>
                                                    </div>
                                                </div>

                                               
                                                <button class="btn w-100 mt-auto add-to-cart-btn" style="background: #FFD700; color: #000; border: none; font-weight: 500;">
                                                    <svg width="16" height="16" class="me-2"><use xlink:href="#cart"></use></svg>Sepete Ekle
                                                </button>

                                             
                                                <input type="hidden" name="ProductID" value="@item.ProductID">
                                                <input type="hidden" name="price" value="@item.Price">
                                                <input type="hidden" name="restaurantId" value="@(item.RestaurantID ?? 1)">
                                                <input type="hidden" name="restaurantName" value="@(item.Restaurant?.Name ?? "Varsayılan Restoran")">
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        setTimeout(function () {
            if (typeof reinitializeCart === 'function') {
                reinitializeCart();
            }
            console.log('Partial products cart system initialized');
        }, 200);
    });
</script>