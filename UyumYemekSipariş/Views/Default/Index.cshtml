
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_UserLayout.cshtml";
}



<section class="py-3" style="background-image: url('images/background-pattern.jpg');background-repeat: no-repeat;background-size: cover;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                <div class="banner-blocks">

                    <div class="banner-ad large bg-info block-1">

                        <div class="swiper main-swiper">
                            <div class="swiper-wrapper">

                                <div class="swiper-slide">
                                    <div class="row banner-content p-5">
                                        <div class="content-wrapper col-md-7">
                                            <div class="categories my-3">Hızlı Teslimat</div>
                                            <h3 class="display-4">En Lezzetli Yemekler 30 Dakikada Kapınızda</h3>
                                            <p>Binlerce restoran, binlerce lezzet. İstediğin yemeği kolayca sipariş et, kapına kadar getirtelim.</p>
                                            <a href="#" class="btn btn-outline-dark btn-lg text-uppercase fs-6 rounded-1 px-4 py-3 mt-3">Sipariş Ver</a>
                                        </div>
                                        <div class="img-wrapper col-md-5">
                                            <img src="https://i.hizliresim.com/q6ghrn0.jpg" class="img-fluid" alt="Yemek Teslimat" style="width: 100%; height: 300px; object-fit: cover;">
                                        </div>
                                    </div>
                                </div>

                                <div class="swiper-slide">
                                    <div class="row banner-content p-5">
                                        <div class="content-wrapper col-md-7">
                                            <div class="categories mb-3 pb-3">Günün Özel Menüsü</div>
                                            <h3 class="banner-title">Pizza & İtalyan Lezzetleri</h3>
                                            <p>Taze malzemelerle hazırlanan pizzalar ve otantik İtalyan yemekleri. Özel soslarımızla damak tadınıza hitap ediyoruz.</p>
                                            <a href="#" class="btn btn-outline-dark btn-lg text-uppercase fs-6 rounded-1">Menüyü Gör</a>
                                        </div>
                                        <div class="img-wrapper col-md-5">
                                            <img src="https://i.hizliresim.com/q1je17h.jpg" class="img-fluid" alt="Pizza Menü" style="width: 100%; height: 300px; object-fit: cover;">
                                        </div>
                                    </div>
                                </div>

                                <div class="swiper-slide">
                                    <div class="row banner-content p-5">
                                        <div class="content-wrapper col-md-7">
                                            <div class="categories mb-3 pb-3">Sağlıklı Seçenekler</div>
                                            <h3 class="banner-title">Fit Menüler & Salata Bar</h3>
                                            <p>Kalori değerleri belirtilmiş, beslenme uzmanları tarafından hazırlanmış sağlıklı ve lezzetli seçenekler.</p>
                                            <a href="#" class="btn btn-outline-dark btn-lg text-uppercase fs-6 rounded-1">Keşfet</a>
                                        </div>
                                        <div class="img-wrapper col-md-5">
                                            <img src="https://i.hizliresim.com/k0t5tzp.jpg" class="img-fluid" alt="Sağlıklı Yemekler" style="width: 100%; height: 300px; object-fit: cover;">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="swiper-pagination"></div>

                        </div>
                    </div>

                    <div class="banner-ad bg-success-subtle block-2" style="background:url('images/burger-bg.jpg') no-repeat;background-position: right bottom">
                        <div class="row banner-content p-5">

                            <div class="content-wrapper col-md-7">
                                <div class="categories mb-3 pb-3">En Popüler</div>
                                <h3 class="banner-title">Burger & Fast Food</h3>
                                <a href="#" class="d-flex align-items-center nav-link">Sipariş Ver <svg width="24" height="24"><use xlink:href="#arrow-right"></use></svg></a>
                            </div>

                        </div>
                    </div>

                    <div class="banner-ad bg-danger block-3" style="background:url('images/turkish-food-bg.jpg') no-repeat;background-position: right bottom">
                        <div class="row banner-content p-5">

                            <div class="content-wrapper col-md-7">
                                <div class="categories mb-3 pb-3">Geleneksel Lezzetler</div>
                                <h3 class="item-title">Türk Mutfağı</h3>
                                <a href="#" class="d-flex align-items-center nav-link">Keşfet <svg width="24" height="24"><use xlink:href="#arrow-right"></use></svg></a>
                            </div>

                        </div>
                    </div>

                </div>
             

            </div>
        </div>
    </div>
</section>

@Html.Action("KategoriListesi", "Partial")

@Html.Action("RestoranListesi", "Partial")

@Html.Action("ÜrünListesi", "Partial")




<section class="py-5">
    <div class="container-fluid">
        <div class="bg-secondary py-5 my-5 rounded-5" style="background: url('images/bg-leaves-img-pattern.png') no-repeat;">
            <div class="container my-5">
                <div class="row">
                    <div class="col-md-6 p-5">
                        <div class="section-header">
                            <h2 class="section-title display-4">Deneyiminizi <span class="text-primary">Değerlendirin</span> ve %15 İndirim Kazanın</h2>
                        </div>
                        <p>Siparişinizden memnun kaldınız mı? Görüşlerinizi bizimle paylaşın ve bir sonraki alışverişinizde özel indirim fırsatından yararlanın.</p>
                    </div>
                    <div class="col-md-6 p-5">
                        <form>
                            <div class="mb-3">
                                <label for="name" class="form-label">Ad Soyad</label>
                                <input type="text"
                                       class="form-control form-control-lg" name="name" id="name" placeholder="Adınızı ve soyadınızı giriniz">
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">E-posta</label>
                                <input type="email" class="form-control form-control-lg" name="email" id="email" placeholder="ornek@email.com">
                            </div>
                            <div class="mb-3">
                                <label for="rating" class="form-label">Memnuniyet Puanınız</label>
                                <select class="form-control form-control-lg" name="rating" id="rating">
                                    <option value="">Puan seçiniz...</option>
                                    <option value="5">⭐⭐⭐⭐⭐ Mükemmel</option>
                                    <option value="4">⭐⭐⭐⭐ Çok İyi</option>
                                    <option value="3">⭐⭐⭐ İyi</option>
                                    <option value="2">⭐⭐ Orta</option>
                                    <option value="1">⭐ Kötü</option>
                                </select>
                            </div>
                            <div class="form-check form-check-inline mb-3">
                                <label class="form-check-label" for="subscribe">
                                    <input class="form-check-input" type="checkbox" id="subscribe" value="subscribe">
                                    Kampanya ve duyurulardan haberdar olmak istiyorum
                                </label>
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-dark btn-lg">Değerlendirmeyi Gönder</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

